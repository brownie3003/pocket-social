#menu
    .pure-menu.pure-menu-open
        = link_to "#{current_user.username}", root_path, class: "pure-menu-heading"
        ul
            li
                a
                    | Subscribers: 
                    = @user.subscribers.count
            li
                a    
                    | Subscriptions: 
                    = @user.subscriptions.count
            li
                = link_to 'Logout', destroy_user_session_path, method: :delete